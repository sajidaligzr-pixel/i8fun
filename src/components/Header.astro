---
import { Image } from 'astro:assets';
import logo from '../assets/logo.webp';
---

<header style="width: '100%'; backgroundColor: 'white';">
  <div style="paddingLeft: '1.5rem'; paddingRight: '1.5rem'; paddingTop: '1rem'; paddingBottom: '1rem'; maxWidth: '80rem'; marginLeft: 'auto'; marginRight: 'auto';">
    <div style="display: 'flex'; alignItems: 'center'; justifyContent: 'space-between'; gap: '2rem';">
      {/* Logo */}
      <div style="display: 'flex'; alignItems: 'center'; gap: '0.5rem'; flexShrink: '0';">
        <Image 
          src={logo} 
          alt="i8 fun Logo" 
          style="height: '4rem'; width: 'auto';"
          width={300}
          height={120}
          fetchpriority="low"
        />
      </div>

      {/* Navigation */}
      <nav style="display: 'none'; alignItems: 'center'; gap: '2rem'; '@media (minWidth: 768px)': { display: 'flex' };">
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Download
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Blogs
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Register
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Login
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Deposit
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Withdraw
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Contact Us
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          Privacy Policy
        </a>
        <a href="#" style="fontSize: '1rem'; lineHeight: '1.5rem'; fontWeight: '500'; color: 'black'; textDecoration: 'none'; transition: 'color 0.2s';" onmouseover="this.style.color='#25D007'" onmouseout="this.style.color='black'">
          About Us
        </a>
      </nav>

      {/* Mobile menu button */}
      <button style="display: 'none'; '@media (maxWidth: 768px)': { display: 'block' }; color: 'black'; background: 'none'; border: 'none'; cursor: 'pointer';" aria-label="Toggle navigation menu">
        <svg class="w-6 h-6" style="width: '1.5rem'; height: '1.5rem';" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  {/* Bottom border line */}
  <div style="height: '1px'; backgroundColor: '#e5e7eb';"></div>
</header>

<style>
  @media (max-width: 767px) {
    nav {
      display: none !important;
    }
    button[aria-label="Toggle navigation menu"] {
      display: block !important;
    }
  }
  
  @media (min-width: 768px) {
    nav {
      display: flex !important;
    }
    button[aria-label="Toggle navigation menu"] {
      display: none !important;
    }
  }
</style>
