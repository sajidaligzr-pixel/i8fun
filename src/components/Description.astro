<style>
  .features-list {
    counter-reset: feature-counter;
  }

  .features-list h3 {
    counter-increment: feature-counter;
  }

  .features-list h3::before {
    content: counter(feature-counter) ". ";
    font-weight: bold;
    color: #1a5c00;
  }

  .games-list {
    counter-reset: games-counter;
  }

  .games-list h3 {
