---
// No client-side interactivity needed for this component

import { Image } from 'astro:assets';
import banner from '../assets/banner.webp';

---

<section class="w-full bg-gray-50 py-12 px-4">
  <div class="max-w-6xl mx-auto">
    {/* Header */}
    <div class="mb-8 relative">
      <div class="bg-slate-900 text-white py-4 px-8 rounded-lg relative">
        {/* Primary accent left */}
        <div class="absolute left-0 top-0 w-4 h-full bg-[#25D007] rounded-l-lg"></div>
        {/* Primary accent right */}
        <div class="absolute right-0 top-0 w-4 h-full bg-[#25D007] rounded-r-lg"></div>

        <h2 class="text-2xl font-bold text-center relative z-10">
          i8 fun Download Real Money Game For Android 2026
        </h2>
      </div>
    </div>

    {/* Main Content Card */}
    <div class="border-4 border-slate-900 rounded-2xl p-8 bg-white">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {/* Left Side - App Icon and Download Button */}
        <div class="flex flex-col items-center gap-6">
          <div class="w-64 h-64 rounded-xl overflow-hidden shadow-lg">
            <Image
              src={banner}
              alt="i8 fun App Icon"
              class="w-full h-full object-cover"
              width={600}
              height={600}
              loading="eager"
              fetchpriority="high"
            />
          </div>

          <a 
            href="https://i8pkr.cloud/?id=430580119" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-full bg-[#25D007] hover:bg-[#1fa005] text-black font-bold py-4 px-6 rounded-lg flex items-center justify-center gap-2 transition-colors min-h-[48px]"
          >
            Download i8 fun
            <span>â¬‡</span>
          </a>
        </div>

        {/* Right Side - App Details Table */}
        <div class="overflow-x-auto">
          <table class="w-full border-collapse">
            <tbody>
              <tr class="border-b border-gray-300 bg-white">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-50 w-1/3">
                  Name of Game
                </td>
                <td class="p-4  text-gray-700">
                  <a href="#" class="text-blue-600 hover:underline font-semibold">
                    I8 Fun
                  </a>
                </td>
              </tr>

              <tr class="border-b border-gray-300 bg-gray-50">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-100">
                  Version
                </td>
                <td class="p-4  text-gray-700">v1.1.0</td>
              </tr>

              <tr class="border-b border-gray-300 bg-white">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-50">
                  Developer
                </td>
                <td class="p-4  text-gray-700">I8PKR</td>
              </tr>

              <tr class="border-b border-gray-300 bg-gray-50">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-100">
                  Size
                </td>
                <td class="p-4  text-gray-700">12 MB</td>
              </tr>

              <tr class="border-b border-gray-300 bg-white">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-50">
                  Requirement
                </td>
                <td class="p-4  text-gray-700">Android 5+</td>
              </tr>

              <tr class="bg-gray-50">
                <td class="border-r border-gray-300 p-4  font-semibold text-gray-800 bg-gray-100">
                  Category
                </td>
                <td class="p-4  text-gray-700">Cards, Casinos</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
