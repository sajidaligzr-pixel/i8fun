---
import { Image } from 'astro:assets';
import banner from '../assets/banner.webp';
---

<section style="width: 100%; backgroundColor: '#f3f4f6'; paddingTop: '3rem'; paddingBottom: '3rem'; paddingLeft: '1rem'; paddingRight: '1rem';">
  <div style="maxWidth: '72rem'; marginLeft: 'auto'; marginRight: 'auto';">
    {/* Header */}
    <div style="marginBottom: '2rem'; position: 'relative';">
      <div style="backgroundColor: '#0f172a'; color: 'white'; paddingTop: '1rem'; paddingBottom: '1rem'; paddingLeft: '2rem'; paddingRight: '2rem'; borderRadius: '0.5rem'; position: 'relative';">
        {/* Primary accent left */}
        <div style="position: 'absolute'; left: '0'; top: '0'; width: '1rem'; height: '100%'; backgroundColor: '#25D007'; borderTopLeftRadius: '0.5rem'; borderBottomLeftRadius: '0.5rem';"></div>
        {/* Primary accent right */}
        <div style="position: 'absolute'; right: '0'; top: '0'; width: '1rem'; height: '100%'; backgroundColor: '#25D007'; borderTopRightRadius: '0.5rem'; borderBottomRightRadius: '0.5rem';"></div>

        <h2 style="fontSize: '1.5rem'; lineHeight: '2rem'; fontWeight: '700'; textAlign: 'center'; position: 'relative'; zIndex: '10';">
          i8 fun Download Real Money Game For Android 2026
        </h2>
      </div>
    </div>

    {/* Main Content Card */}
    <div style="border: '4px solid #0f172a'; borderRadius: '1rem'; padding: '2rem'; backgroundColor: 'white';">
      <div style="display: 'grid'; gridTemplateColumns: '1fr'; gap: '2rem'; '@media (minWidth: 1024px)': { gridTemplateColumns: '1fr 1fr' };">
        {/* Left Side - App Icon and Download Button */}
        <div style="display: 'flex'; flexDirection: 'column'; alignItems: 'center'; gap: '1.5rem';">
          <div style="width: '16rem'; height: '16rem'; borderRadius: '0.75rem'; overflow: 'hidden'; boxShadow: '0 10px 15px -3px rgba(0, 0, 0, 0.1)';">
            <Image
              src={banner}
              alt="i8 fun App Icon"
              style="width: '100%'; height: '100%'; objectFit: 'cover';"
              width={600}
              height={600}
              loading="eager"
              fetchpriority="high"
            />
          </div>

          <button style="width: '100%'; backgroundColor: '#25D007'; color: 'black'; fontWeight: '700'; paddingTop: '0.75rem'; paddingBottom: '0.75rem'; paddingLeft: '1.5rem'; paddingRight: '1.5rem'; borderRadius: '0.5rem'; display: 'flex'; alignItems: 'center'; justifyContent: 'center'; gap: '0.5rem'; border: 'none'; cursor: 'pointer'; transition: 'backgroundColor 0.2s';" onmouseover="this.style.backgroundColor='#1fa005'" onmouseout="this.style.backgroundColor='#25D007'">
            Download i8 fun
            <span>â¬‡</span>
          </button>
        </div>

        {/* Right Side - App Details Table */}
        <div style="overflowX: 'auto';">
          <table style="width: '100%'; borderCollapse: 'collapse';">
            <tbody>
              <tr style="borderBottom: '1px solid #d1d5db'; backgroundColor: 'white';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f9fafb'; width: '33.333%';">
                  Name of Game
                </td>
                <td style="padding: '1rem'; color: '#374151';">
                  <a href="#" style="color: '#2563eb'; textDecoration: 'none'; fontWeight: '600';" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">
                    I8 Fun
                  </a>
                </td>
              </tr>

              <tr style="borderBottom: '1px solid #d1d5db'; backgroundColor: '#f9fafb';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f3f4f6';">
                  Version
                </td>
                <td style="padding: '1rem'; color: '#374151';">v1.1.0</td>
              </tr>

              <tr style="borderBottom: '1px solid #d1d5db'; backgroundColor: 'white';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f9fafb';">
                  Developer
                </td>
                <td style="padding: '1rem'; color: '#374151';">I8PKR</td>
              </tr>

              <tr style="borderBottom: '1px solid #d1d5db'; backgroundColor: '#f9fafb';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f3f4f6';">
                  Size
                </td>
                <td style="padding: '1rem'; color: '#374151';">12 MB</td>
              </tr>

              <tr style="borderBottom: '1px solid #d1d5db'; backgroundColor: 'white';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f9fafb';">
                  Requirement
                </td>
                <td style="padding: '1rem'; color: '#374151';">Android 5+</td>
              </tr>

              <tr style="backgroundColor: '#f9fafb';">
                <td style="borderRight: '1px solid #d1d5db'; padding: '1rem'; fontWeight: '600'; color: '#1f2937'; backgroundColor: '#f3f4f6';">
                  Category
                </td>
                <td style="padding: '1rem'; color: '#374151';">Cards, Casinos</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (max-width: 1023px) {
    div[style*="gridTemplateColumns: '1fr 1fr'"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>
